block script
    - let js = '/wwwroot/templates/website/release/index.min.js';
    //- Default
    //- script(type='text/javascript' src='/wwwroot/templates/website/release/default.min.js' defer)
    //- Page

    script.
        addCSS('#{css}')
        $(window).bind('scroll touchstart', function (e) {
            if (checkPreloadJs == false) {
                checkPreloadJs = true;
                addScript('/wwwroot/templates/website/release/default.min.js', false, true).then(function () {
                    addScript('#{js}');
                    addScript('/wwwroot/templates/website/release/layout.min.js');
                });
            }
        });
    

    