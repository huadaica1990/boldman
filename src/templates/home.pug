extends layout.pug

block title
    - let title = 'Trang chá»§';
    title #{title}
block style
    - let css = '/wwwroot/templates/release/index.min.css';
    //- Default
    link(rel='stylesheet' type='text/css' href='/wwwroot/templates/release/default.min.css')
    link(rel='stylesheet' type='text/css' href='/wwwroot/templates/release/main.min.css')

block content
    //- Var
    - let idPage = 'index';
    - let h1Title = '@Html.Raw(ViewBag.MetaTitle)';
    //- Content
    
    main.page-wrapper.main.home(id=`${idPage}-page`)
        h1.d-none=h1Title
        include components/_main-slider.pug
block script
    - let js = '/wwwroot/templates/release/index.min.js';
    //- Default
    script(type='text/javascript' src=`/wwwroot/templates/release/default.min.js` defer)
    //- Page

    script.
        addCSS('#{css}')
        addScript('#{js}')
        addScript('/wwwroot/templates/release/layout.min.js')
    

    