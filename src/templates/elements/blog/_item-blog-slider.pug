.post.post-item(itemprop='liveBlogUpdate' itemscope itemtype='http://schema.org/BlogPosting')
    figure.post-media.br-sm
        a.img(href=item.href title='')
            picture
                source.swiper-lazy(media='' data-srcset='' type='image/webp')
                img.swiper-lazy(data-src=dist+item.src alt='' itemprop='thumbnail' width='300' height='210')
            .swiper-lazy-preloader
        .post-calendar
            span.post-day=item.day
            span.post-month T #{item.month}
    .post-details
        .post-cat
            a(href='/blogcat.html')=item.cat 
        .post-meta by
            a.post-author(href='')=item.author
            =' - '
            a.post-date(href='' itemprop='datePublished' content='') #{item.day}.#{item.month}.#{item.year}
            =' '
            a.post-comment(href='')
                i.ecs-icon-comments
                span=item.cmt
        h3.post-title.text-bold(itemprop='headline')
            a(href=item.href itemprop='url' title='')=item.name
        .post-content(itemprop='description')!=item.des
