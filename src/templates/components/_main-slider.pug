#mainslider.main-slider
    if !animation
        .swiper.slider-fixedheight.swiper-container.swiper-theme.nav-inner.pg-inner.nav-colored(data-swiper-options=`{
                                                                                            'lazy': false,
                                                                                            'loop': true,
