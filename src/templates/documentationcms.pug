extends layout_blank.pug

block title
    - let title = 'Documentation';
    title #{title}
block style
    - let css = '/wwwroot/templates/release/document.min.css';
    //- Default
    
    link(rel='stylesheet' type='text/css' href='/wwwroot/templates/styles/plugins/fontawesome-free/css/all.min.css')
    link(rel='stylesheet' type='text/css' href='/wwwroot/templates/release/default.min.css')
    link(rel='stylesheet' type='text/css' href='/wwwroot/templates/release/main.min.css')

block content
    //- Var
    - let idPage = 'documentation';
    - let h1Title = '@ViewBag.MetaTitle';
    //- Data
    //- Content
    main.page-wrapper.main(id=`${idPage}-page`)
        .page-header(style='background-image: url(/wwwroot/templates/images/default/documentation-header.jpg);')
            .container
                h1.page-title EcsGroup Docs
                p How Can We Help You?
                .widget-search
                    input.form-control.input-search(type='text' name='search' autocomplete='off' placeholder='Search ...')
                    button.btn.btn-search(type='submit')
                        i.ecs-icon-search
        .page-content.pt-10
            .container
                .row.gutter-lg.main-content-wrap
                    aside.col-lg-3.sidebar
                        .sidebar-content
                            .widget
                                h3.widget-title Getting Started
                                ul.widget-body.search-ul
                                    li.show
                                        a.document-link(href='#template-welcome' data-title='Getting Started') Welcome
                                    li
                                        a.document-link(href='#template-features' data-title='Getting Started') Features
                                    li
                                        a.document-link(href='#template-structure' data-title='Getting Started') Files Structure
                                        
                            .widget
                                h3.widget-title Stylesheets
                                ul.widget-body.search-ul
                                    li
                                        a.document-link(href='#template-css-overview' data-title='Stylesheets') Overview
                                    li
                                        a.document-link(href='#template-css-mixins' data-title='Stylesheets') Mixins
                                    li
                                        a.document-link(href='#template-css-configuration' data-title='Stylesheets') Configuration
                                    li
                                        a.document-link(href='#template-css-variables' data-title='Stylesheets') Variables
                            
                            .widget
                                h3.widget-title Javascripts
                                ul.widget-body.search-ul
                                    li
                                        a.document-link(href='#template-js-overview' data-title='Javascripts') Overview
                                    li
                                        a.document-link(href='#template-js-plugins' data-title='Javascripts') Plugins

                            .widget
                                h3.widget-title Components
                                ul.widget-body.search-ul
                                    li
                                        a.document-link(href='#template-com-item' data-title='Components') Item blank
                                    li
                                        a.document-link(href='#template-com-blog' data-title='Components') Blog
                                    li
                                        a.document-link(href='#template-com-product' data-title='Components') Product
                                    li
                                        a.document-link(href='#template-com-accordion' data-title='Components') Accordion
                                    li
                                        a.document-link(href='#template-com-tabs' data-title='Components') Tabs
                                    li
                                        a.document-link(href='#template-com-alert' data-title='Components') Alert
                                    li
                                        a.document-link(href='#template-com-button' data-title='Components') Button
                                    li
                                        a.document-link(href='#template-com-grid' data-title='Components') Grid
