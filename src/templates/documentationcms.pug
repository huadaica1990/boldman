                                            background: $white-color,
                                            color: $dark-color,
                                            // Header header
                                            header: (
                                                _margin-left:2rem,
                                                background-color:$grey-background,
                                                font-size:1.1rem,
                                                text-transform:capitalize,
                                                welcomeMsg: (
                                                    _padding:10px 0
                                                ),
                                                avatar: (
                                                    _height:25px
                                                ),
