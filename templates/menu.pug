doctype html
html(lang='vi-VN' itemscope itemtype='http://schema.org/website' class='no-js')
    include components/_header.pug
        title #{title}

    //- CSS
    script.
        WebFontConfig = {
            custom: {
                families: ['SVN-Poppins'],
                urls: ['/fonts/fonts.css']
            }
            //google: { families: ['Poppins:400,500,600,700,800'] }
        };
        (function (d) {
            var wf = d.createElement('script'), s = d.scripts[0];
            wf.src = '/release/webfont.js';
            wf.async = true;
            s.parentNode.insertBefore(wf, s);
        })(document);
    link(rel='stylesheet' type='text/css' href=css)
    body 
    
        //-Main layout
        main(id=`${idPage}-page` class='container')
            .breadcrumb.mb-10
                .breadcrumb-header.flex-center.bg-grey
                    .container.text-center.text-capitalize
                        h2.page-title=title
                        p.page-subtitle=h1Title
            
            .list-page
                each item in menuPage
                    if item.isShow
                        fieldset.mb-5.list-mb-2
                            legend=item.name
                            if item.children != null
                                each item_child in item.children
                                    if item_child.isShow
                                        .font-weight-normal.pl-2.font-size-lg
                                            a(href=item_child.href) #{item_child.id}. #{item_child.name}
                                        if item_child.children != null
                                            each item_child_child in item_child.children
                                                if item_child_child.isShow
                                                    .font-weight-normal.pl-8.font-size-md
                                                        a(href=item_child_child.href) #{item_child_child.id}. #{item_child_child.name}
